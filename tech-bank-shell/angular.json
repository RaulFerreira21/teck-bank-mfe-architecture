{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"bankShell": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			},
			"root": "projects/bank-shell",
			"sourceRoot": "projects/bank-shell/src",
			"prefix": "app-shell",
			"architect": {
				"build": {
					"builder": "@angular-architects/native-federation:build",
          "options": {
            "styles": [
              "@angular/material/prebuilt-themes/azure-blue.css"
            ]
          },
					"configurations": {
						"production": {
							"target": "bankShell:esbuild:production"
						},
						"development": {
							"target": "bankShell:esbuild:development",
							"dev": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular-architects/native-federation:build",
					"options": {
						"target": "bankShell:serve-original:development",
						"rebuildDelay": 0,
						"dev": true,
						"port": 0
					}
				},
				"extract-i18n": {
					"builder": "@angular/build:extract-i18n"
				},
				"test": {
					"builder": "@angular/build:karma",
					"options": {
						"polyfills": [
							"zone.js",
							"zone.js/testing"
						],
						"tsConfig": "projects/bank-shell/tsconfig.spec.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "projects/bank-shell/public"
							}
						],
						"styles": [
              "@angular/material/prebuilt-themes/azure-blue.css",
              "projects/bank-shell/src/styles.scss"
            ]
					}
				},
				"esbuild": {
					"builder": "@angular-devkit/build-angular:application",
					"options": {
						"browser": "projects/bank-shell/src/main.ts",
						"polyfills": [
							"zone.js",
							"es-module-shims"
						],
						"tsConfig": "projects/bank-shell/tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "projects/bank-shell/public"
							}
						],
						"styles": [
							"projects/bank-shell/src/styles.scss"
						]
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "500kB",
									"maximumError": "1MB"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "4kB",
									"maximumError": "8kB"
								}
							],
							"outputHashing": "all"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve-original": {
					"builder": "@angular/build:dev-server",
					"configurations": {
						"production": {
							"buildTarget": "bankShell:esbuild:production"
						},
						"development": {
							"buildTarget": "bankShell:esbuild:development"
						}
					},
					"defaultConfiguration": "development",
					"options": {
						"port": 4200
					}
				}
			}
		},
		"aboutAndLogin": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			},
			"root": "projects/about-and-login",
			"sourceRoot": "projects/about-and-login/src",
			"prefix": "about-login",
			"architect": {
				"build": {
					"builder": "@angular-architects/native-federation:build",
					"options": {
            "ssr": true,
            "styles": [
              "@angular/material/prebuilt-themes/azure-blue.css"
            ]
					},
					"configurations": {
						"production": {
							"target": "aboutAndLogin:esbuild:production"
						},
						"development": {
							"target": "aboutAndLogin:esbuild:development",
							"dev": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular-architects/native-federation:build",
					"options": {
						"target": "aboutAndLogin:serve-original:development",
						"rebuildDelay": 0,
						"dev": true,
						"port": 0
					}
				},
				"extract-i18n": {
					"builder": "@angular/build:extract-i18n"
				},
				"test": {
					"builder": "@angular/build:karma",
					"options": {
						"polyfills": [
							"zone.js",
							"zone.js/testing"
						],
						"tsConfig": "projects/about-and-login/tsconfig.spec.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "projects/about-and-login/public"
							}
						],
						"styles": [
              "@angular/material/prebuilt-themes/azure-blue.css",
              "projects/about-and-login/src/styles.scss"
            ]
					}
				},
				"esbuild": {
					"builder": "@angular-devkit/build-angular:application",
					"options": {
						"browser": "projects/about-and-login/src/main.ts",
						"polyfills": [
							"zone.js",
							"es-module-shims"
						],
						"tsConfig": "projects/about-and-login/tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "projects/about-and-login/public"
							}
						],
						"styles": [
							"projects/about-and-login/src/styles.scss"
						],
						"server": "projects/about-and-login/src/main.server.ts",
						"outputMode": "server",
						"ssr": {
							"entry": "projects/about-and-login/src/server.ts"
						}
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "500kB",
									"maximumError": "1MB"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "4kB",
									"maximumError": "8kB"
								}
							],
							"outputHashing": "all"
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve-original": {
					"builder": "@angular/build:dev-server",
					"configurations": {
						"production": {
							"buildTarget": "aboutAndLogin:esbuild:production"
						},
						"development": {
							"buildTarget": "aboutAndLogin:esbuild:development"
						}
					},
					"defaultConfiguration": "development",
					"options": {
						"port": 4201
					}
				}
			}
		}
	},
	"cli": {
		"analytics": false
	}
}